<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"

    >

    <ImageView
    android:id="@+id/imageView_coffee_blog_details"
    android:layout_width="match_parent"
    android:layout_height="134dp"
     android:scaleType="fitXY"
    android:src="@drawable/waterside" />

    <LinearLayout
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee_blog_details_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:text="11 Reason You Should Dring Coffee Every Day"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray">
    </View>

    <TextView
        android:id="@+id/coffee_blog_description_title_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:text=" Description Text"
        android:textAlignment="textStart"
        android:textSize="15sp" />

</LinearLayout>