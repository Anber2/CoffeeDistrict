<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayOutBlogItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.14"
        android:background="@color/White"

        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/coffeeBlog_ListItem_imageView"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/waterside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coffeeBlog_listItem_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:text="11 Reason You Should Dring Coffee Every Day"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>